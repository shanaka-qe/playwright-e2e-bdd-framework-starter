name: Scheduled Regression Tests

on:
  schedule:
    # Run daily at 2 AM UTC
    - cron: '0 2 * * *'
  workflow_dispatch:
    inputs:
      environment:
        description: 'Environment to test'
        required: true
        default: 'staging'
        type: choice
        options:
          - development
          - staging
          - production

jobs:
  regression-tests:
    name: Regression Tests - ${{ github.event.inputs.environment || 'staging' }}
    runs-on: ubuntu-latest
    timeout-minutes: 90
    
    strategy:
      fail-fast: false
      matrix:
        application: [webapp, adminapp, mcp-server]
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '18'
          cache: 'npm'

      - name: Install dependencies
        run: npm ci

      - name: Install Playwright Browsers
        run: npx playwright install --with-deps

      - name: Run ${{ matrix.application }} regression tests
        run: |
          case "${{ matrix.application }}" in
            "webapp")
              npm run test:webapp:ui
              npm run test:webapp:api
              ;;
            "adminapp")
              npm run test:adminapp:ui
              npm run test:adminapp:api
              ;;
            "mcp-server")
              npm run test:mcp:api
              ;;
          esac
        env:
          NODE_ENV: ${{ github.event.inputs.environment || 'staging' }}
          HEADLESS: true
          CI: true
          RETRIES: 2
          # Add environment-specific secrets
          # STAGING_UI_BASE_URL: ${{ secrets.STAGING_UI_BASE_URL }}
          # STAGING_ADMIN_BASE_URL: ${{ secrets.STAGING_ADMIN_BASE_URL }}

      - name: Upload test results
        if: always()
        uses: actions/upload-artifact@v4
        with:
          name: regression-results-${{ matrix.application }}
          path: |
            reports/
            test-results/
          retention-days: 30

      - name: Upload failure screenshots
        if: failure()
        uses: actions/upload-artifact@v4
        with:
          name: failure-screenshots-${{ matrix.application }}
          path: test-results/**/*.png
          retention-days: 7

  notify-on-failure:
    name: Notify on Failure
    runs-on: ubuntu-latest
    needs: [regression-tests]
    if: failure()
    
    steps:
      - name: Create issue on failure
        uses: actions/github-script@v7
        with:
          script: |
            github.rest.issues.create({
              owner: context.repo.owner,
              repo: context.repo.repo,
              title: 'ðŸš¨ Scheduled Regression Tests Failed',
              body: `The scheduled regression tests have failed.
              
              **Workflow Run:** ${{ github.server_url }}/${{ github.repository }}/actions/runs/${{ github.run_id }}
              **Environment:** ${{ github.event.inputs.environment || 'staging' }}
              **Time:** ${new Date().toISOString()}
              
              Please review the test results and fix any issues.`,
              labels: ['test-failure', 'automated']
            })


{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["@playwright/test", "node"],
    "outDir": "dist"
  },
  "include": [
    "tests/**/*.ts",
    "features/**/*.ts",
    "src/**/*.ts",
    "config/**/*.ts"
  ]
}
